# Thermal Ark Web Application Environment Variables
# Copy this file to .env and modify the values as needed

# Database Configuration
MYSQL_ROOT_PASSWORD=password
MYSQL_DATABASE=thermal_ark
MYSQL_USER=thermal_user
MYSQL_PASSWORD=thermal_password

# Redis Configuration
REDIS_PASSWORD=

# Backend Configuration
SPRING_PROFILES_ACTIVE=prod
SPRING_DATASOURCE_URL=jdbc:mysql://mysql:3306/thermal_ark
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=password
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8080/api
VITE_WS_BASE_URL=ws://localhost:8080/ws

# IoT Simulator Configuration
BACKEND_URL=http://backend:8080
SIMULATOR_PORT=3001
SIMULATOR_INTERVAL=5000

# Security Configuration
JWT_SECRET=your-jwt-secret-key-here-change-in-production
JWT_EXPIRATION=86400

# Application Configuration
APP_NAME=Thermal Ark
APP_VERSION=1.0.0
APP_DESCRIPTION=Thermal Energy Management System with Blockchain Integration

# Blockchain Configuration (if applicable)
BLOCKCHAIN_NETWORK=development
BLOCKCHAIN_RPC_URL=http://localhost:8545
CONTRACT_ADDRESS=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/thermal-ark.log